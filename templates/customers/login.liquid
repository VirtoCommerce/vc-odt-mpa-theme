{% layout 'login' %}

<form class="d-flex flex-column align-items-center"
  accept-charset="UTF-8"
  action="{{ requestUrl }}"
  method="post"
  id="customer_login"
  name="customer_login"
>
  <h3>{{ "common.login.login_header" | t }}</h3>

  {% include 'form-errors-custom' %}

  <div class="form-group">
    <input type="text" id="username" class="form-control" name="customer[user_name]" required placeholder={{ "common.login.username" | t }} />
  </div>

  <div class="form-group">
    <input type="password" id="password" class="form-control" name="customer[password]" required placeholder={{ "common.login.password" | t }} />
  </div>

  <div class="custom-control custom-checkbox mt-3">
    <input id="RememberMe" class="custom-control-input" type="checkbox" />
    <label for="RememberMe" class="custom-control-label">{{ "common.login.remember_me" | t }}</label>
  </div>
  <button type="submit" class="btn btn-primary mt-2">{{ "common.login.log_in" | t }}</button>
  <a class="mt-3" href="{{ '/account/forgotpassword' | absolute_url }}">{{ "common.login.forgot_password" | t }}</a>
  {{ antiforgery }}
</form>
