<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <form class="d-flex flex-column align-items-center mt-5"
                  accept-charset="UTF-8"
                  action="{{ requestUrl }}"
                  method="post"
                  id="customer_login"
                  name="customer_login">

                {% include 'form-errors-custom' %}

                <h3>Log in to the portal</h3>

                <div class="form-group">
                    <input type="text" id="username" class="form-control" name="customer[user_name]" required placeholder="Username" />
                </div>

                <div class="form-group">
                    <input type="password"  id="password" class="form-control" name="customer[password]" required  placeholder="Password" />
                </div>

                <div class="custom-control custom-checkbox mt-3">
                    <input id="RememberMe" class="custom-control-input" type="checkbox">
                    <label for="RememberMe" class="custom-control-label">Remember me</label>
                </div> 
                <button type="submit" class="btn btn-primary mt-2">Log in</button>
                <a class="forgot-link align-self-end mt-3" href="{{ '/account/forgotpassword' | absolute_url }}">Forgot the password?</a>
                {{ antiforgery }}
            </form>
        </div>
    </div>
</div>