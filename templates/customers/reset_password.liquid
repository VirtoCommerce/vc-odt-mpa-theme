{% layout 'login' %}
<div class="container">
<form accept-charset="UTF-8" class="mt-5" action="{{ '~/account/resetpassword' | absolute_url }}" method="post" id="reset_customer_password" name="reset_customer_password">

<div class="window d-flex flex-column align-items-center">
    <h2>{{ "common.reset_password.title" | t }}</h2>

    <input type="hidden" value="{{ reset_password.email }}" name="customer[email]">
    <input type="hidden" value="{{ reset_password.token }}" name="customer[token]">

    <div class="form-group">
        <input ng-model="password" id="reset_password" name="customer[password]" required placeholder={{ "common.reset_password.password" | t }} />
    </div>

    <div class="form-group">
        <input ng-model="password_confirmation" id="password_confirmation" name="customer[password_confirmation]" required placeholder={{ "common.reset_password.confirm_password" | t }} />
    </div>

    <button class="btn btn-primary mt-3">{{ "common.reset_password.submit" | t }}</button>
</div>
{{ antiforgery }}
</form>
</div>
