<style>
  {%- if block.backgroundColor != '' %}
    #{{ block.__id }} {
        background-color: {{ block.backgroundColor }};
    }
  {% endif %}
  {%- if block.overlayColor != '' %}
    #{{block.__id}} > .block:after {
      content: ' ';
      background-color: {{ block.overlayColor }};
      position: absolute;
      left: 0;
      top: 0;
      right: 0;
      bottom: 0;
      z-index: 5;
    }
    #{{block.__id}} .cover-container {
      z-index: 10;
      position: relative;
    }
  {% endif %}

  {%- if block.subtitleColor != '' %}
    #{{block.__id}} .subtitle-container, #{{block.__id}} .subtitle-container > * {
      color: {{block.subtitleColor}};    
    }
  {% endif %}

  {%- if block.noteColor != '' %}
    #{{block.__id}} .text-muted {
      color: {{block.noteColor}} !important;
    }
  {% endif %}

  {%- if block.titleColor != '' %}
    #{{block.__id}} h1, #{{block.__id}} h2, #{{block.__id}} h3, #{{block.__id}} .like-h1, #{{block.__id}} .like-h2, #{{block.__id}} .like-h3 {
      color: {{block.titleColor}};
    }
  {% endif %}

</style>
