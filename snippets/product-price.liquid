<div class="d-flex flex-column">
    <span class="d-flex">
        {% if on_sale %}
        <del class="small mr-1 align-self-center">
            {% if settings.show_prices_with_taxes %}
            {% assign price = product.compare_at_price_with_tax %}
            {% include 'price' %}
            {% else %}
            {% assign price = product.compare_at_price %}
            {% include 'price' %}
            {% endif %}
        </del>
        {% endif %}
        <strong class="font-weight-bold h5 align-self-center">
        {% if settings.show_prices_with_taxes %}
            {% assign price = product.price_with_tax %}
            {% include 'price' %}
        {% else %}
            {% assign price = product.price %}
            {% include 'price' %}
        {% endif %}
        </strong>
    </span>
    {% if on_sale %}
    <strong class="border border-primary mr-auto text-primary text-uppercase font-weight-bold p-1">
        {% if settings.show_prices_with_taxes %}
            {% assign compare_price = product.compare_at_price_with_tax %}
            {% assign product_price = product.price_with_tax %}
        {% else %}
            {% assign compare_price = product.compare_at_price %}
            {% assign product_price = product.price.actual_price %}
        {% endif %}
        {% include 'price-sale' %}
    </strong>
    {% endif %}
</div>
