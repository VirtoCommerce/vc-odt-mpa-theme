<footer class="bg-secondary pt-3">
  <div class="container d-flex flex-column footer-columns">
    <div class="d-flex w-100 justify-content-between flex-wrap">
      {% if settings.footer_column1_title %}
          <div class="footer-column footer-4-columns">
            <h4>{{ settings.footer_column1_title }}</h4>
            {{ settings.footer_column1_content }}
          </div>
      {% endif %}
      {% if settings.footer_column2_title %}
          <div class="footer-column footer-4-columns">
            <h4>{{ settings.footer_column2_title }}</h4>
            {{ settings.footer_column2_content }}
          </div>
      {% endif %}
      {% if settings.footer_column3_title %}
          <div class="footer-column footer-4-columns">
            <h4>{{ settings.footer_column3_title }}</h4>
            {{ settings.footer_column3_content }}
          </div>
      {% endif %}
            {% if settings.footer_column4_title %}
            <div class="footer-column footer-4-columns">
              <h4>{{ settings.footer_column4_title }}</h4>
              {{ settings.footer_column4_content }}
            </div>
            {% endif %}
    </div>

  </div>
    <div class="copyrights">
      {{ settings.copyright }}
    </div>
</footer>
