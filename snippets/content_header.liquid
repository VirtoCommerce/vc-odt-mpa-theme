<div class="header-inner container">
  <div class="row align-items-center">
    <div class="col-auto">
      <div class="header-logo">{{ current_store.name }}</div>
    </div>
    <div class="col d-none d-lg-block header-nav">
      <ul class="nav">
        <li class="nav__item ml-auto">
          {% if customer.is_registered_user %}
            <a href="{{ 'account' | absolute_url }}" class="nav__link">
              {% if customer.operator_user_id != null %}
                {{ 'common.header.logged_in.on_behalf' | t }}
              {% else %}
                {{ 'common.header.logged_in.as' | t }}
              {% endif %}
              {{ customer.user_name}}
            </a>
          {% else %}
            <a href="{{ 'account/login' | absolute_url }}" class="nav__link">
              {{ 'common.header.sign_in' | t }}
            </a>
          {% endif %}
        </li>
        {% if customer.is_registered_user %}
          <li class="nav__item ml-auto">
            <a href="{{ 'account/logout' | absolute_url }}" class="nav__link">{{ 'common.header.log_out' | t }}
            </a>
          </li>
        {% endif %}
      </ul>
    </div>
  </div>
</div>
